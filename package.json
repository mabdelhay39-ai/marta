{
  "name": "case-study-architecture",
  "version": "1.0.0",
  "description": "Architecture for case study",
  "main": "index.js",
  "repository": "git@github.com:hallomarta/case-study-architecture.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "dev:build": "tsc -w",
    "dev:start": "nodemon ./dist/src/index.js",
    "dev": "concurrently npm:dev:*",
    "build": "rimraf ./dist && tsc",
    "start": "node ./dist/src/index.js",
    "test": "NODE_ENV=test jest -c ./jest.config.json",
    "test:watch": "NODE_ENV=test jest -c ./jest.config.json --watchAll=true",
    "migrations:up": "npm run build && node ./node_modules/typeorm/cli.js migration:run -d dist/src/typeormconfig.js",
    "migrations:down": "npm run build && node ./node_modules/typeorm/cli.js migration:revert -d dist/src/typeormconfig.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.303.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "typeorm": "^0.3.12",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
